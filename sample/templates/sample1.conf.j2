vhost __defaultVhost__ {
    hls {
        enabled         on;
        hls_fragment    10;
        hls_window      60;
        hls_path        {{ HLS_PATH }};
        hls_m3u8_file   [app]/[stream].m3u8;
        hls_ts_file     [app]/[stream]-[seq].ts;
    }

    http_hooks {
        enabled         on;
        on_publish      {{ CALLBACK_URL }};
    }
}